@model Animal

<div class="card h-100">
    <img src="@Model.ImageUrl" class="card-img-top" alt="Animal">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Gender - @Model.Category?.Name</p>
    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-success">Pet Now</button>
        <a asp-controller="Favorite" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary">Add to Favorite</a>
    </div>
</div>