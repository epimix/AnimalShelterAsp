@model List<Animal>
<h2>Cart</h2>

<div class="card text-center">
    <div class="card-body">
        <h5 class="card-title">Favorite pets</h5>
        <ol class="list-group list-group-numbered">
            @foreach (var i in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@i.Name</div>
                    </div>
                    <div>
                        <span class="badge text-bg-primary rounded-pill">@i.Gender</span>
                        
                        <a asp-controller="Favorite" asp-action="Delete" asp-route-id="@i.Id" class="text-danger">
                            <i class="bi bi-x-square"></i>
                        </a>


                    </div>
                </li>
            }
        </ol>

        <div class="mt-3">
            <a class="btn btn-success">Confirm</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue select pet</a>
        </div>
    </div>
    <div class="card-footer text-body-secondary">
        Pets count: 0
    </div>
</div>